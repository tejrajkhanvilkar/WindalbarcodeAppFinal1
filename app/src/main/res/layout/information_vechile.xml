<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

    <TextView
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:text="Date"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_date"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/ic_date"
            android:hint="Select Date"
            android:padding="8dp"
            android:inputType="none"/>

        <ImageButton
            android:id="@+id/btn_datepickerdialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/colorGray"
            android:src="@drawable/ic_date"
            tools:ignore="SpeakableTextPresentCheck"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="2dp"
        android:textColor="#000000"
        android:text="Vehicle Number"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/Vehicle_number"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/ic_date"
            android:hint="Select Date"
            android:inputType="none"
            android:padding="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:background="@color/colorPrimary"
            android:id="@+id/add_truck_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/colorGray"
            android:src="@drawable/ic_baseline_add_24"
            tools:ignore="SpeakableTextPresentCheck"/>

    </LinearLayout>

    <EditText
        android:id="@+id/add_new_truck"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_vehicle"
        android:hint="Enter Truck Number"
        android:padding="8dp"
        android:inputType="none"/>



    <TextView
        android:id="@+id/invoice_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Invoice Number (optional)"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/invoice_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_invoice_number"
        android:hint="Invoice number"
        android:padding="8dp" />
    <TextView
        android:id="@+id/parts_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:text="Select Parts"
        android:textColor="@color/colorBlack" />

    <Spinner
        android:id="@+id/parts_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:text="Part Quantity"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/et_part_quantity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_invoice_number"
        android:hint="Enter Part Quantity"
        android:inputType="number"
        android:padding="8dp" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#D32F2F"
        android:text="Continue"
        android:textColor="#ffffff"/>


    </LinearLayout>

</ScrollView>