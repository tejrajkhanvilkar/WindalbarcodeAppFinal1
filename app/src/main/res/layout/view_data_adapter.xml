<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:backgroundTint="#F73535"
        android:layout_height="175dp"
        android:layout_width="match_parent">

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:id="@+id/viewdata_parts_name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text=" 36HP FRAME"
            android:layout_width="match_parent"
            android:layout_height="35dp">
        </TextView>

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/viewdata_vehcile_no"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="MH-12-NC-1846"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="42dp">
        </TextView>

        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

           <LinearLayout
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
            <TextView
                android:text="Date :"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

            <TextView
                android:id="@+id/viewdata_date"
                android:textColor="#ffffff"
                android:text="1-10-2021"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>
           </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Invoice number :"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:id="@+id/viewdata_invoicenumber"
                    android:textColor="#ffffff"
                    android:text="12533544"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="CORRECT PARTS :"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:id="@+id/viewdata_correctpart"
                    android:textColor="#ffffff"
                    android:text="25"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Wrong parts :"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:id="@+id/viewdata_wrongpart"
                    android:textColor="#ffffff"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>